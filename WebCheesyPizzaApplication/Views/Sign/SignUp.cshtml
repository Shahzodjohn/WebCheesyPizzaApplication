@model WebCheesyPizzaApplication.ViewModels.SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
}
<div class="row">
    <div asp-validation-summary="All"></div>
    <div class="col-md-3"></div>
    <div class="col-md-6" style="margin-top:100px">
        <form action="SignUp" method="post">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Регистрация</h5>
                    <label>Имя</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <label>Фамилия</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <label>Контактные номера</label>
                    <input type="tel" asp-for="PhoneNumber" class="form-control" />
                    <label>Email адрес</label>
                    <input type="email" asp-for="Email" class="form-control" />
                    <label>Логин</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <label>Пароль</label>
                    <input type="password" asp-for="Password" class="form-control" />
                </div>
                <div class="card-footer">
                    <input type="submit" class="btn btn-outline-primary btn-block" value="Зарегистрироваться"/>
                </div>
            </div>
        </form>
    </div>
</div>





