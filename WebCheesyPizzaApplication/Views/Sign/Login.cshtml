@model WebCheesyPizzaApplication.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="text-danger" asp-validation-summary="All">
</div>
<form class="form-group" action="Login" method="post">
    <div class="form-group">
        <label for="Login">Login</label>
        <input type="text" asp-for="Login" class="form-control" placeholder="Login">
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Password">
    </div>
    <div class="form-check">
        <input type="hidden" asp-for="returnUrl" />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

