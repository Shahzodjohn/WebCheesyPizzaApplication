@model WebCheesyPizzaApplication.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<div class="row">
    <div class="text-danger" asp-validation-summary="All">
    </div>
        <div class="col-md-4"></div>
        <div class="col-md-4" style="margin-top:100px">
            <form class="form-group" action="Login" method="post">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Авторизация</h5>
                        <div class="form-group">
                            <label for="Login">Логин</label>
                            <input type="text" asp-for="Login" class="form-control" placeholder="Ваш логин">
                        </div>
                        <div class="form-group">
                            <label>Пароль</label>
                            <input type="password" asp-for="Password" class="form-control" id="exampleInputPassword1" placeholder="Ваш пароль">
                        </div>
                        <div class="form-check">
                            <input type="hidden" asp-for="returnUrl" />
                        </div>
                        <button type="submit" class="btn btn-primary">Войти</button> 
                        <a class="nav-link text-primary" asp-controller="Sign" asp-action="SignUp"> У вас ещё нет аккаунта? <strong>Зарегистрироваться</strong></a>
                    </div>
                </div>
            </form>
        </div>
</div>