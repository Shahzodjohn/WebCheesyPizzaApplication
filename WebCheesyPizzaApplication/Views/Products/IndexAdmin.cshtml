@model WebCheesyPizzaApplication.ViewModels.IndexCategoryViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-md-2 bg-warning">
        <div class="mt-3">

            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Categories)
                {

                    <li class="list-group-item bg-transparent text-center">
                        <a href="~/products/searchbycategories?CategoryId=@item.Id" class="text-white h4">@item.Name</a>

                    </li>
                }
            </ul>
        </div>
        <div class="d-flex justify-content-center">
            <img src="~/images/Bann.jpg" class="img-fluid" />
        </div>

    </div>
    <div class="col-md-10">
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-3 mt-3">
                    <div class="card">
                        <div class="card-header  text-center">
                            <a href="~/products/detailsproduct?id=@item.Id" class="btn btn-link">@item.Name</a>
                        </div>
                        <div class="card-body d-flex justify-content-center">
                            <img height="200" width="220" src="@item.ImagePath" alt="FOTO" />
                        </div>
                        <div class="card-footer  text-center">
                            <p>Цена: @item.Price TJS</p>
                    <a href="/Products/DeleteProduct?id=@item.Id" class="btn btn-primary">Изменить</a>
                    <a href="/Products/DeleteProduct?id=@item.Id" class="btn btn-danger">Удалить</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


