@model WebCheesyPizzaApplication.ViewModels.IndexCategoryViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-md-2 bg-warning">
        <div class="mt-3">

            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Categories)
                {

                    <li class="list-group-item bg-transparent text-center">
                        <a href="~/products/searchbycategories?CategoryId=@item.Id" class="text-white h4">@item.Name</a>

                    </li>
                }
            </ul>
        </div>
        <div class="d-flex justify-content-center mt-2">
            <img src="~/images/PizzaCheck.jpg" style="width:350px" class="img-fluid" />
        </div>
        <div class="d-flex justify-content-center mt-2 img-fluid">
            <img src="~/images/skid.jpg" style="width:350px" class="img-fluid" />
        </div>
    </div>


    <div class="col-md-10">
        <div class="row">
            <div class="col-md-12">
                <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <a href="/products/searchbycategories?CategoryId=3"><img src="~/images/NEW FILE.jpg" class="d-block w-100"></a>
                        </div>
                        <div class="carousel-item">
                            <a href="/products/searchbycategories?CategoryId=3"><img src="~/images/r1.jpg" class="d-block w-100"></a>
                        </div>
                        <div class="carousel-item">
                            <a href="/products/searchbycategories?CategoryId=3"><img src="~/images/r2.jpg" class="d-block w-100"></a>
                        </div>

                    </div>
                    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model.Products)
            {
                <div class="col-3 mt-3">
                    <div class="card">
                        <div class="card-header  text-center" style="height:70px">
                            <a href="~/products/detailsproduct?id=@item.Id" class="btn btn-link"><strong>@item.Name</strong></a>
                        </div>
                        <div class="card-body d-flex justify-content-center">
                            <img height="200" width="220" src="@item.ImagePath" alt="FOTO" />
                        </div>
                        <div class="card-footer  d-flex justify-content-between">
                            <p><strong>Цена: @item.Price TJS </strong> </p>
                                <a href="~/products/AddToBasket?id=@item.Id" onclick="alert('Продукт добавлен в корзину')">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="36" height="36" fill="currentColor" class="bi bi-bag-plus" viewBox="0 0 16 16">
                                        <path fill-rule="evenodd" d="M8 7.5a.5.5 0 0 1 .5.5v1.5H10a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0v-1.5H6a.5.5 0 0 1 0-1h1.5V8a.5.5 0 0 1 .5-.5z" />
                                        <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z" />
                                    </svg>
                                </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
