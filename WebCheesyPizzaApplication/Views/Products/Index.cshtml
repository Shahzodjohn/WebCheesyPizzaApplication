@model WebCheesyPizzaApplication.ViewModels.IndexCategoryViewModel
@{
    ViewData["Title"] = "Products";
}

<div class="row">
    <div class="col-md-1 bg-info">
        <div class="mt-3  float-left text-center">

            <ul class="list-group list-group-flush">
                @foreach (var item in Model.Categories)
                {

                    <li class="list-group-item list-group-item-warning btn btn-link">
                        <a href="~/products/searchbycategories?CategoryId=@item.Id">@item.Name</a>
                    </li>
                }
            </ul>
        </div>
        
    </div>
    <div class="col-md-11 ">
        @foreach (var item in Model.Products)
        {


            <div class="card col-3 bg-info text-center m-3" style="display:inline-flex;">
                <div class="card">
                    <div class="card-header">
                        <a href="~/products/detailsproduct?id=@item.Id" class="btn btn-link">@item.Name</a>
                    </div>
                    <div class="card-body d-flex justify-content-center">
                        <img height="300" width="320" src="@item.ImagePath" alt="FOTO" />
                    </div>
                    <div class="card-footer">
                        <p>Цена:@item.Price TJS</p>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


