@model List<WebCheesyPizzaApplication.ViewModels.OrderProductViewModel>
<div asp-validation-summary="All"></div>
<table class="table table-active table-bordered">
    <thead>
        <tr>
            <th>Название</th>
            <th>Количество</th>
            <th>Стоимость</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="font-size:23px">@item.Name</td>
                <td style="font-size:23px">@item.Amount</td>
                <td style="font-size:23px">@(item.Amount*item.Price) TJS</td>
            </tr>

        }
    </tbody>
</table>
<table class="table table-dark">
    <thead>
        <tr>
            <th style="font-size:25px">Количество продуктов</th>
            <th style="font-size:25px">Итого</th>
            
        </tr>
    </thead>
    <tbody>
        <tr>

            <td><strong style="font-size:30px">@Model.Sum(x => x.Amount) продуктов</strong></td>
            <td><strong style="font-size:30px">@Model.Sum(x => x.Price * x.Amount) TJS</strong></td>
        </tr>
    </tbody>
</table>